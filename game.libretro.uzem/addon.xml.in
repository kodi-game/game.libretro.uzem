<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.uzem"
		name="Uzebox (Uzem)"
		version="2.0.0.16"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>uze</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>MIT</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.uzem</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="en_GB">Uzebox (Uzem) v2.0</summary>
		<description lang="da_DK">Uzem er den officielle emulator til Uzebox (en retro-minimalistisk 8-bit open source-spilkonsol).</description>
		<description lang="en_GB">Uzem is the official emulator for the Uzebox (a retro-minimalist 8-bit open source game console).</description>
		<description lang="ko_KR">Uzem은 Uzebox(레트로 미니멀리스트 8비트 오픈 소스 게임 콘솔)의 공식 에뮬레이터입니다.</description>
	</extension>
</addon>
